{
	"schemaVersion": 1,
	"id": "magnus",
	"version": "${version}",
	"name": "magnus",
	"description": "A modular, high-performance, and resilient synchronization suite for Minecraft Fabric servers. Features real-time inventory sync, cross-server chat, and global player management.",
	"authors": [
		"kroder"
	],
	"contact": {
		"homepage": "https://github.com/kroderdev/magnus",
		"sources": "https://github.com/kroderdev/magnus"
	},
	"license": "LGPL-3.0-only",
	"icon": "assets/magnus/icon.png",
	"accessWidener": "magnus.accesswidener",
	"environment": "*",
	"entrypoints": {
		"main": [
			{
				"value": "dev.kroder.magnus.Magnus",
				"adapter": "kotlin"
			}
		],
		"client": [
			{
				"value": "dev.kroder.magnus.MagnusClient",
				"adapter": "kotlin"
			}
		],
		"fabric-datagen": [
			{
				"value": "dev.kroder.magnus.MagnusDataGenerator",
				"adapter": "kotlin"
			}
		],
		"fabric-gametest": [
			{
				"value": "dev.kroder.magnus.gametest.MagnusGameTests",
				"adapter": "kotlin"
			}
		]
	},
	"mixins": [
		"magnus.mixins.json",
		{
			"config": "magnus.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.17.3",
		"minecraft": "~1.21.1",
		"java": ">=21",
		"fabric-api": "*",
		"fabric-language-kotlin": "*"
	}
}